<div class="page-header">
  <h1>
    Edit Your Project
    <a href="/projects/<%= @project.id %>/edit" class="btn btn-warning">
      <i class="fa fa-edit"></i>
    </a>
  </h1>
</div>


<div class="container">
 <div class="row">
     <div class="page-header">
       <h1><%= @project.name %> <small><%= @project.city %>,<%= @project.state  %></small></h1>
     </div>
   </div>
 </div>

 <div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>Project Description</h3>
      <p class="lead"><%= @project.description %></p>
    </div>

    <div class="col-md-4">
    <h4>Project Location</h4>
      <address>
        <%= @project.street_address_1 %> <%= @project.street_address_2 %><br>
        <%= @project.city %> <%= @project.state %> <%= @project.zip %><br>
      </address>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>Cost of Project</h4>
      <p class="lead"><%= @project.cost_amount %></p>
    </div>
    <div class="col-md-4">
      <h4>Space Type</h4>
      <p class="lead"><%= @project.space_type.name %></p>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
<% @project.photos.each do |photo| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="<%= photo.image %>">
      </div>
    </div>
    <% end %>
  </div>
</div>


