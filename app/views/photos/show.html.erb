<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Photo #<%= @photo.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Project</dt>
              <dd><%= @photo.project_id %></dd>

              <dt>Image</dt>
              <dd><img src="<%= @photo.image %>" class="img-responsive"></dd>

              <dt>Tag</dt>
              <%= render partial: "bags/bags", locals: {bagable: @photo} %>

              <%= render partial: "bags/form", locals: {bagable: @photo} %>


<%#= form_for @photo do |f| %>
<!-- <div class="form-group"> -->
<%#= f.text_area :name, class: "form-control", placeholder: "Add a Comment" %>
      <%#= f.collection_select(:tag_option_ids, TagOption.all, :id, :name, @photo.tag_option_ids, :class => "form-control select2-tags", :multiple => true) %>
<!-- </div> -->

<%#= f.submit class: "btn btn-primary" %>
<%# end %>



            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/photos" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
