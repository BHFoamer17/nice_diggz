<!-- Validation failure messages -->

<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Photo #<%= @photo.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_photo/<%= @photo.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for primary -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="primary">
                  <input type="checkbox" id="primary" name="primary" value="1" <%= "checked" if @photo.primary %>>
                  Primary
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="file" id="image" name="image" placeholder="Image" class="form-control" value="<%= @photo.image %>">
            </div>
          </div>

          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Photo Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @photo.name %>">
            </div>
          </div>

          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Tokens
            </label>
            <div class="col-sm-10">
              <input type="text" id="description_token" name="description_token" placeholder="Description" class="form-control" value="<%= @photo.descriptions.ids %>">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
